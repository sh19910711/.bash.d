#!/bin/bash

npm() {
  local git_root=$(git rev-parse --show-toplevel)
  local rel=$(realpath --relative-base "${git_root}" "$(pwd)")
  sudo docker run -u $(id -u):$(id -g) -w "/workspace/${rel}" -e "HOME=/home/user" -v "${HOME}:/home/user" -v "${git_root}:/workspace" -ti npm $(printf " %q" npm "$@")
}

npm "$@"
